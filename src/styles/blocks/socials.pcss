.socials {
    display: flex;
    align-items: center;
    justify-content: center;
  
    @include tablets {
      margin-right: 90px;
    }
  
    @include phones {
      display: none;
    }
  }
  
  .socials__icons {
    width: 28px;
    height: 31px;
    display: block;
    fill: $grey-text;
    transition: 0.3s;
  
    &:hover {
      fill: $red;
    }
  }
  
  .socials__item {
    margin-right: 40px;
  
    &:last-child {
      margin-right: 0;
    }
  }